---
import { Star } from 'lucide-astro';
import LinkCard from './LinkCard.astro';

---

<section id="links" class="content-section section">
	<h2 class="section-title">
		<Star size={20} class="section-icon" />
		Em Destaque
	</h2>
	
	<div class="grid grid-cols-2">
		<LinkCard
			title="Gumroad . Automações AI"
			description="Automações para o Make.com"
			url="https://patriciobrito.gumroad.com/"
			gradient="linear-gradient(135deg, #667eea 0%, #764ba2 100%)"
			isWide={true}
		/>
		
		<LinkCard
			title="Patrício Brito CrIA"
			description="Processo criativo no youtube"
			url="https://youtube.com/@patriciobrito-cria"
			gradient="linear-gradient(135deg, #4facfe 0%, #00f2fe 100%)"
		/>
	</div>
</section>

<style scoped>
	.content-section {
		margin-bottom: 4rem;
	}

	.content-section:first-of-type {
		margin-top: 1rem;
	}

	.section-title {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		font-size: 1.5rem;
		font-weight: 600;
		margin: 0 0 2rem 0;
		color: var(--text);
		letter-spacing: -0.02em;
	}

	.section-icon {
		color: var(--accent-primary);
	}
	@media (max-width: 768px) {
		.content-section {
			margin-bottom: 3rem;
		}
		
		.section-title {
			font-size: 1.25rem;
			margin-bottom: 1.5rem;
		}
		
		.section-icon {
			width: 18px;
			height: 18px;
		}
	}
</style>